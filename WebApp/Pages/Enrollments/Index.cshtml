@page
@model WebApp.Pages.Enrollments.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<form asp-page="./Index" method="get">
    <div class="form-actions no-color">
        <p>
            Cauta dupa numele studentului:
            <input type="text" name="searchString" value="@Model.StudentNameFilter" />
            <input type="submit" value="Search" class="btn btn-primary" /> |
            <a asp-page="./Index">Back to full List</a>
        </p>
    </div>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Enrollment[0].EnrollmentDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Enrollment[0].Course.CourseName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Enrollment[0].Student.FullName2)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Enrollment) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EnrollmentDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Course.CourseName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Student.FullName2)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.EnrollmentID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.EnrollmentID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.EnrollmentID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
