@page "{id:int?}"
@model WebApp.Pages.Courses.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Course[0].CourseName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Course[0].Credits)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Course[0].NoClasses)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Course[0].Description)
            </th>
           <!--<th>
                @Html.DisplayNameFor(model => model.Course[0].Professor.FullName)
            </th>-->
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.CourseData.Courses) {
            string selectedRow = "";
            if (item.CourseID == Model.CourseID)
            {
                selectedRow = "table-success";
            }
            <tr class="@selectedRow">
            <td>
                @Html.DisplayFor(modelItem => item.CourseName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Credits)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NoClasses)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
           <!--<td>
                @Html.DisplayFor(modelItem => item.Professor.FullName)
            </td>-->
            <td>
                <a asp-page="./Index" asp-route-id="@item.CourseID">Select</a> |
                <a asp-page="./Edit" asp-route-id="@item.CourseID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.CourseID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.CourseID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
@if (Model.CourseData.Enrollments != null)
{
    <h3>Studenti inscrisi la cursul:</h3>
    <table class="table">

        @foreach (var item in Model.CourseData.Enrollments)
        {
            string selectedRow = "";
            if (item.CourseID == Model.CourseID)
            {
                selectedRow = "table-success";
            }
            <tr class="@selectedRow">

                <td>
                    @item.Student.FullName2
                </td>
            </tr>
        }
    </table>
}
