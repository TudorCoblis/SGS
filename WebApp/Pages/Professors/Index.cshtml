@page "{id:int?}"
@model WebApp.Pages.Professors.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Professor[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Professor[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Professor[0].Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Professor[0].DateOfBirth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Professor[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Professor[0].Phone)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.ProfessorData.Professors) {
            string selectedRow = "";
            if (item.ProfessorID == Model.ProfessorID)
            {
                selectedRow = "table-success";
            }
            <tr classs="@selectedRow">
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfBirth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                <a asp-page="./Index" asp-route-id="@item.ProfessorID">Select</a> |
                <a asp-page="./Edit" asp-route-id="@item.ProfessorID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ProfessorID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ProfessorID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
@if (Model.ProfessorData.Courses != null)
{
    <h3>Cursuri sustinute de profesorul:</h3>
    <table class="table">

        @foreach (var item in Model.ProfessorData.Professors)
        {
            string selectedRow = "";
            if (item.ProfessorID == Model.ProfessorID)
            {
                selectedRow = "table-success";
            }
            <tr class="@selectedRow">

                <td>
                    @{
                        foreach (var b in item.Courses)
                        {

                            @b.CourseName @:  @b.Credits credite  @b.NoClasses ore

                            <br />
                        }
                    }
                </td>
            </tr>
        }
    </table>
}
